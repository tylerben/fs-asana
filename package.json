{
  "version": "0.1.7",
  "name": "fs-asana",
  "description": "Simple and limited CLI for generating Asana tasks based on your local file system.",
  "repository": "https://github.com/tylerben/fs-asana",
  "homepage": "https://github.com/tylerben/fs-asana",
  "author": "Ben Tyler",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "bin": {
    "fs-asana": "./dist/index.js"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "clean": "rm -rf ./dist",
    "build": "yarn clean && tsc -p . && chmod +x dist/index.js",
    "prepare": "yarn build",
    "format": "prettier --write ./src/**/*.ts"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "yarn format"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/index.js",
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.1",
    "@types/inquirer": "^7.3.3",
    "@types/yargs": "^17.0.2",
    "husky": "^7.0.1",
    "prettier": "^2.3.2",
    "size-limit": "^5.0.1",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "asana": "^0.18.6",
    "inquirer": "^8.1.1",
    "ora": "^5.4.1",
    "yargs": "^17.0.1"
  }
}
